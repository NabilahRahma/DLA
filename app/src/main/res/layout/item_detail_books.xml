<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cover_book_newest"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="false"
                android:src="@drawable/no_cover_book"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/cover_book_newest"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="9dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_toEndOf="@+id/cover_book_newest">
                <TextView
                    android:id="@+id/title_book_newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:gravity="center"
                    android:text="Sistem Informasi"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/title_book_pengarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:gravity="center"
                    android:text="Lefudin, M. Pd."
                    android:textColor="#000" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>